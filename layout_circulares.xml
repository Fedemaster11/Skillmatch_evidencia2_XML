<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridBotonesCirculares"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:padding="16dp"
    android:useDefaultMargins="true"
    android:layout_marginTop="32dp"
    android:layout_marginBottom="32dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btnConfig"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/btn_circular"
        android:src="@android:drawable/ic_menu_manage"
        app:tint="#FFFFFF"
        android:contentDescription="ConfiguraciÃ³n" />

    <ImageButton
        android:id="@+id/btnMatch"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/btn_circular"
        android:src="@android:drawable/btn_star_big_on"
        app:tint="@null"
        android:contentDescription="Match" />

    <ImageButton
        android:id="@+id/btnMensajes"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/btn_circular"
        android:src="@android:drawable/ic_dialog_email"
        app:tint="#FFFFFF"
        android:contentDescription="Mensajes" />

    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:background="@drawable/btn_circular"
        android:src="@android:drawable/ic_menu_myplaces"
        app:tint="#FFFFFF"
        android:contentDescription="Perfil" />

</GridLayout>
